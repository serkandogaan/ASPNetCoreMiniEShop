                            <p class="help-block text-danger"></p>
                        </div>
                        <div class="control-group">
                            <input type="text" class="form-control" id="password" placeholder="Şifreniz"
                                required="required" data-validation-required-message="Lütfen Şifrenizi Giriniz" />
                            <p class="help-block text-danger"></p>
                        </div>
                        <div>
                            <button class="btn btn-primary py-2 px-4" type="submit" id="RegisterFormButton">Giriş Yap</button>
                        </div>
                    @*</form>*@
                </div>
            </div>
        </div>
    </div>

								</div>
							</div>
						</div>
					</div>
					<!--end breadcrumb-->
					<div class="card">
						<div class="card-body">
							<div class="card-title">
								<h4 class="mb-0">Kategori Bilgileri</h4>
							</div>
							<hr/>
							<div class="table-responsive">
								<table id="example2" class="table table-striped table-bordered" style="width:100%">
									<thead>
										<tr>
											<th>ID </th>
											<th>Kategori Adı</th>
											<th>Kategori Açıklaması</th>
										</tr>
									</thead>
									<tbody>
										
											@foreach (var ProductCategory in _ids.ProductCategoryService.GetAll())
									{
										<tr>
										<td>@ProductCategory.Id </td>
										<td>@ProductCategory.ProductCategoryName </td>
										<td>@ProductCategory.ProductCategoryDescription</td>
										</tr>
									}
											
											
									</tbody>
									<tfoot>
										<tr>
											<th>ID </th>
											<th>Kategori Adı</th>
											<th>Kategori Açıklaması</th>
										</tr>
									</tfoot>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>
